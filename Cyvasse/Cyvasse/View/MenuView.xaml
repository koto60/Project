<UserControl x:Class="Cyvasse.View.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cyvasse.View"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="320">
    
    <Grid Background="Aqua">
        <Button Content="Start game" Height="25" Width="80"  
                Command="{Binding DataContext.ViewSoloGameCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
        <!-- Sets the command to the ancestor in the visual tree, that is MainViewModel -->
    </Grid>
</UserControl>
